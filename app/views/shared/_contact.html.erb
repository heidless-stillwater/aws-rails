
<article>
  <%= form_tag(send_mail_path, class: 'col') do %>
    <div class='form-label-group'>
      <%= text_field_tag 'name', nil, class: 'form_control', placeholder: 'Name' %>
      <label for="name">Name</label>
    </div>
    <div class='form-label-group'>
      <%= email_field_tag 'email', nil, class: 'form_control', placeholder: 'email address' %>
      <label for="email">Email address</label>
    </div>
    <div class='form-label-group'>
      <%= text_area_tag 'message', nil, class: 'form_control', placeholder: 'comments' %>
      <label for="message">Comments</label>
    </div>
    <%= submit_tag nil, class: 'btn btn-primary'  %>
  <% end %>
</article>
