
<div class="container">

  <h1>Full Name:[<%= @user.full_name %>]</h1>

  <p><strong>Admin:</strong> <%= @user.admin?  %></p>

  <h2>Bio:</h2>
  <p><%= @user.bio %></p>

  <% if current_user.id == @user.id %>
    <%= link_to 'Edit my profile', edit_user_path(current_user), class: 'btn btn-primary' %>
  <% end %>

  <p> </p>
</div>
